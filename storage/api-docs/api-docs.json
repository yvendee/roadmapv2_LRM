{
    "openapi": "3.0.0",
    "info": {
        "title": "My Laravel API",
        "description": "General API documentation for the Laravel backend.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/csrf-token": {
            "get": {
                "tags": [
                    "Security"
                ],
                "summary": "Get CSRF Token",
                "operationId": "c31d4d5ae876062f992ab19650187235",
                "responses": {
                    "200": {
                        "description": "Returns the CSRF token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "csrf_token": {
                                            "type": "string",
                                            "example": "XyZ123AbC456"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login",
                "operationId": "010adf19f9ddedd130422ed706162861",
                "parameters": [
                    {
                        "name": "X-CSRF-TOKEN",
                        "in": "header",
                        "description": "CSRF token (retrieved from /api/csrf-token)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "eyJpdiI6Ij..."
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "kay@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "session_id": {
                                            "type": "string",
                                            "example": "a1b2c3d4e5f6g7h8"
                                        },
                                        "user": {
                                            "properties": {
                                                "email": {
                                                    "type": "string",
                                                    "example": "kay@gmail.com"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "admin"
                                                },
                                                "group": {
                                                    "type": "string",
                                                    "example": "executive"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid credentials"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Security",
            "description": "Security"
        },
        {
            "name": "Authentication",
            "description": "Authentication"
        }
    ]
}